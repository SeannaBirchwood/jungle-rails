<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
          <dt>Avg. Rating</dt>
          <dd><%=@product.average_rating %></dd>

        </dl>
      </div>
          <% if current_user %>
            <div>
              <%= form_for [@product, @comment] do |f| %>
              <%= f.text_area :content %>
              <%= f.select :rating, options_for_select([[1], [2], [3], [4], [5]]) %> Stars
              <%= f.submit "Create"%>
              <% end %>
            </div>
          <% else %>
            <span>
              <%= link_to 'Login', '/login' %> or <%= link_to 'Signup', '/signup' %> to write a review.
            </span>
          <% end %>
      <div class="col-sm-8">
        <dl class="dl-vertical">
          <dd><%= render "comments" %></dd>
        </dl>
      </div>


  </article>

</section>
